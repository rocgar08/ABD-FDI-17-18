for $b in bailes/baile
where $b/sala >1
return $b/nombre

for $b in bailes/baile
where $b/sala = 2 and $b/precio < 35 and $b/precio[@moneda="dolares"]
for $x in alojamientos/alojamiento
where $x/tipo = "hotel"
return $x/nombre

for $x in alojamientos/alojamiento
let $numHa:-count(x/habitaciones/habitacion)
where $x/tipo = "hotel"
return <hotel>
        <numH>{$numHa}</numH>
        <nombre>{$x/nombre}</nombre>
      </hotel>
for $x in alojamientos/alojamiento
let $mxP:-max(x/habitaciones/habitacion)
let $minP:min(x/habitaciones/habitacion)
where $x/tipo = "hotel"
return <hotel>
        <max>{$mxP}</max>
        <min>{$minP}</min>
      </hotel>